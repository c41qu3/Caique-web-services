@model IEnumerable<WebApplication2.Models.ClienteViewModelTela>

@{
    ViewBag.Title = "Catálogo";
}

<h2>Catálogo</h2>
<br/><br/>


<div class="row">    

@foreach (var item in Model)
{
   
    
          <div class="row" style="width:50%;height:360px; float:left ">
                <div  class="row" style=" margin-left:10%; width:90%; background-color:#dcd0d0; border-radius:10px; "> 
                  <div class="row" style="margin:10px 10px 10px 10px">  
                         <center class="row"><strong>Informações </strong></center>   
                  <strong> Modelo:</Strong> @Html.DisplayFor(modelItem => item.Modelo)
                    <br/>
                  <strong> Km: </strong>  @Html.DisplayFor(modelItem => item.Km)
                    <br />
                  <strong>Combustível:</strong> @Html.DisplayFor(modelItem => item.Combustivel)
                    <br />
                  <strong>Cambio:</strong>  @Html.DisplayFor(modelItem => item.Cambio)
                    <br />
                  <strong>Final Placa:</strong> @Html.DisplayFor(modelItem => item.FinalPlaca)
                    <br /> 
                  <strong> Ano:</strong>  @Html.DisplayFor(modelItem => item.Ano)
                    <br />
                  <strong> Cor:</strong>  @Html.DisplayFor(modelItem => item.Cor)
                    <br /> 
                  <strong> Preço:</strong>  @Html.DisplayFor(modelItem => item.Preco)
                      <center class="row"><strong>Opcionais </strong></center> 
                       > @Html.DisplayFor(modeOpcao1 => item.Opcao1) <br /> 
                       > @Html.DisplayFor(modeOpcao2 => item.Opcao2) <br /> 
                       > @Html.DisplayFor(modeOpcao3 => item.Opcao3) <br /> 
                       > @Html.DisplayFor(modeOpcao4 => item.Opcao4) <br /> 
                       > @Html.DisplayFor(modeOpcao5 => item.Opcao5) <br /> 
                       > @Html.DisplayFor(modeOpcao6 => item.Opcao6) <br /> 
                      
                  
                   </div>     
                </div>
              
          </div>
   
 
    <div style="width:50%;float:right;height:360px">
        <div id="@item.Km" class="carousel slide" data-ride="carousel ">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                <li data-target="#carousel-example-generic" data-slide-to="4"></li>
                <li data-target="#carousel-example-generic" data-slide-to="5"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="@item.Foto1" alt="..." >
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item ">
                    <img src="@item.Foto2" alt="..." >
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item ">
                    <img src="@item.Foto3" alt="...">
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item ">
                    <img src="@item.Foto4" alt="..." >
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item ">
                    <img src="@item.Foto5" alt="..." >
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item ">
                    <img src="@item.Foto6" alt="..." >
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                ...
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#@item.Km" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#@item.Km" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
            
     </div>  
       
      
 
}

</div>